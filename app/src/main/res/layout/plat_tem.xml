<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/container_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/logo_restaurant"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/label_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text=" Menu double Twister Normal, Pepsi, Frites normales"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_weight="0.8"
            android:layout_gravity="start"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 MAD"
            android:layout_gravity="top"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_details"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="visible">
        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_remove_circle_outline_red"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_add_circle_outline_green"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</RelativeLayout>