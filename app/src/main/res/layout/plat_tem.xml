<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/container_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="4dp"
        >
        <ImageView
            android:id="@+id/logo_meal"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/logo_restaurant"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/layout_desi_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/logo_meal">
            <TextView
                android:id="@+id/label_plat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text=" Menu double Twister Normal, Pepsi, Frites normales"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_weight="0.8"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 MAD"
                android:layout_gravity="top"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/add_to_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_outline_green"
            android:layout_alignBottom="@id/logo_meal"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/container_details"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/container_details_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" x4"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/label_plat_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text=" Menu double Twister Normal, Pepsi, Frites normales"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_weight="0.8"/>
            <TextView
                android:id="@+id/price_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 MAD"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_details_details"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <ImageView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_remove_circle_outline_red"
                android:layout_alignParentStart="true"
                />
            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_add_circle_outline_green"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>