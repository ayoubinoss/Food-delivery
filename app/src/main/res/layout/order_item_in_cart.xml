<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/logo_restaurant"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/logo_restaurant"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/label_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/logo_restaurant"
        android:layout_alignTop="@id/logo_restaurant"
        android:layout_marginStart="8dp"
        android:text="KFC"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/logo_restaurant"
        android:layout_below="@id/label_restaurant"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="4 x Menu double Twister Normal, Pepsi, Frites normales..."
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/logo_restaurant"
        android:layout_alignBottom="@id/logo_restaurant"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="200 MAD"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="normal" />
    <android.support.design.chip.Chip
        android:id="@+id/check-out"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logo_restaurant"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:text="Commander"
        android:textAllCaps="true"
        app:chipBackgroundColor="@color/colorSecondary"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>